<script>
    // 客户端JavaScript，用于处理筛选功能
    document.addEventListener('DOMContentLoaded', () => {
        const filterButtons = document.querySelectorAll('.filter-btn');
        const searchInput = document.querySelector('.search-input') as HTMLInputElement;
        const publicationCards = document.querySelectorAll('.publication-card') as NodeListOf<HTMLElement>;
        
        // 筛选按钮点击事件
        filterButtons.forEach(button => {
            button.addEventListener('click', () => {
                // 移除所有按钮的active类
                filterButtons.forEach(btn => btn.classList.remove('active'));
                // 为当前点击的按钮添加active类
                button.classList.add('active');
                
                const filter = button.textContent?.toLowerCase() ?? 'all';
                
                // 显示或隐藏出版物卡片
                publicationCards.forEach(card => {
                    if (filter === 'all') {
                        card.style.display = 'block';
                    } else {
                        const cardType = card.classList.contains('conference-paper') ? 'conference' :
                                       card.classList.contains('journal-paper') ? 'journal' :
                                       card.classList.contains('workshop-paper') ? 'workshop/poster' :
                                       card.classList.contains('poster-paper') ? 'workshop/poster' :
                                       card.classList.contains('book-chapter') ? 'book chapter' : '';
                        
                        if (cardType === filter) {
                            card.style.display = 'block';
                        } else {
                            card.style.display = 'none';
                        }
                    }
                });
            });
        });
        
        // 搜索框输入事件
        if (searchInput) {
            searchInput.addEventListener('input', () => {
                const searchTerm = searchInput.value.toLowerCase();
                
                publicationCards.forEach(card => {
                    const titleElement = card.querySelector('.publication-title');
                    const abstractElement = card.querySelector('.publication-abstract');
                    const authorsElement = card.querySelector('.publication-authors');
                    
                    const title = titleElement?.textContent?.toLowerCase() ?? '';
                    const abstract = abstractElement?.textContent?.toLowerCase() ?? '';
                    const authors = authorsElement?.textContent?.toLowerCase() ?? '';
                    
                    if (title.includes(searchTerm) || abstract.includes(searchTerm) || authors.includes(searchTerm)) {
                        card.style.display = 'block';
                    } else {
                        card.style.display = 'none';
                    }
                });
            });
        }
    });
</script> 