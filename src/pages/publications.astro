<MainLayout title={title} metaDescription={metaDescription}>
    <section class="publications-header">
        <div class="container">
            <h1 class="page-title">Publications</h1>
            <p class="page-description">Exploring the intersection of human needs and technological capabilities through rigorous research and thoughtful design.</p>
        </div>
    </section>
    
    <section class="publications-content">
        <div class="container">
            <div class="publications-controls">
                <div class="filter-controls">
                    <button class="filter-btn active">All</button>
                    <button class="filter-btn">Journal</button>
                    <button class="filter-btn">Conference</button>
                    <button class="filter-btn">Workshop/Poster</button>
                    <button class="filter-btn">Book Chapter</button>
                </div>
                
                <div class="search-box">
                    <span class="search-icon">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <circle cx="11" cy="11" r="8"></circle>
                            <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
                        </svg>
                    </span>
                    <input type="text" class="search-input" placeholder="Search publications...">
                </div>
            </div>
            
            {Object.entries(publicationsByYear)
                .sort(([yearA], [yearB]) => Number(yearB) - Number(yearA))
                .map(([year, publications]) => (
                <>
                    <div class="year-divider">
                        <h3 class="year-label">{year}</h3>
                        <div class="year-line"></div>
                    </div>
                    
                    <div class="publication-grid">
                        {publications.map(pub => (
                            <div class={`publication-card ${pub.type}`}>
                                {pub.image && (
                                    <div class="publication-image">
                                        <img src={pub.image.replace('/images/', '/MyPage/images/')} alt={pub.title}>
                                    </div>
                                )}
                                <div class="publication-content">
                                    <h3 class="publication-title">{pub.title}</h3>
                                    <p class="publication-authors" set:html={pub.authors.replace('Your Name', '<span class="author-highlight">Your Name</span>')}></p>
                                    <p class="publication-venue">{pub.venue}</p>
                                    <p class="publication-abstract">{pub.abstract}</p>
                                    <div class="publication-tags">
                                        {pub.tags.map(tag => (
                                            <span class="publication-tag">{tag}</span>
                                        ))}
                                    </div>
                                    <div class="publication-links">
                                        {Object.entries(pub.links).map(([key, url]) => (
                                            key === 'bibtex' ? (
                                                <button class="publication-link" onclick={`navigator.clipboard.writeText(\`${url}\`); alert('BibTeX copied to clipboard!')`}>
                                                    {key.charAt(0).toUpperCase() + key.slice(1)}
                                                </button>
                                            ) : (
                                                <a href={url} class="publication-link" target={key === 'doi' ? '_blank' : '_self'}>
                                                    {key === 'doi' ? 'DOI' : key.charAt(0).toUpperCase() + key.slice(1)}
                                                </a>
                                            )
                                        ))}
                                    </div>
                                </div>
                            </div>
                        ))}
                    </div>
                </>
            ))}
        </div>
    </section>
</MainLayout>

