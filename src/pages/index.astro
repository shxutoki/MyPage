---
import MainLayout from '../layouts/MainLayout.astro';

const title = "Shihui Xu - HCI Researcher";
const metaDescription = "Personal website of Shihui Xu, researcher in Human-Computer Interaction and Adaptive Interfaces.";

// Á≤æÈÄâÁ†îÁ©∂È°πÁõÆ
const featuredProjects = [
    {
        title: "Shared AR Shopping Experience",
        slug: "shared-ar-shopping",
        image: "/MyPage/images/shared-ar-shopping-page/video-thumbnail.jpg",
        description: "Using personalized avatars and shared gazes to create collaborative shopping experiences in Augmented Reality.",
        tags: ["AR", "MR", "Collaborative Shopping Experience", "Personalized Avatar"]
    },
    {
        title: "Drone-enhanced Remote Collaboration",
        slug: "drone-remote-collaboration",
        image: "/MyPage/images/drone-remote-collaboration-page/featured-image.png",
        description: "Designing intuitive interaction models for virtual reality environments.",
        tags: ["AR", "VR", "Remote Collaboration", "Human-Drone Interaction"]
    }
];

// ÊúÄÊñ∞Âá∫ÁâàÁâ©
const recentPublications = [
    {
        title: "Understanding User Preferences in Adaptive Interfaces: A Mixed-Methods Study",
        authors: "Your Name, Jane Smith, John Davis",
        venue: "CHI 2023",
        link: "/MyPage/publications#chi2023"
    },
    {
        title: "Cross-Device User Experience: Maintaining Consistency in Adaptive Interfaces",
        authors: "Your Name, Lisa Wang, Thomas Martinez",
        venue: "MobileHCI 2023",
        link: "/MyPage/publications#mobilehci2023"
    },
    {
        title: "Cognitive Load Balancing in Adaptive User Interfaces",
        authors: "Your Name, John Davis",
        venue: "UIST 2022",
        link: "/MyPage/publications#uist2022"
    }
];
---

<MainLayout title={title} metaDescription={metaDescription}>
    <section class="hero">
        <div class="container">
            <div class="hero-content">
                <div class="hero-image">
                    <img src="/MyPage/profile.jpg" alt="Shihui Xu">
                </div>
                <div class="hero-text">
                    <h1 class="hero-title">Shihui Xu</h1>
                    <p class="hero-subtitle">PhD Student in <span class="highlight">Human-Computer Interaction</span></p>
                    <p class="hero-description">
                        I am a PhD student at Waseda University, Graduate School of Information, Production, and Systems, advised by <a href="https://www.waseda.jp/fsci/gips/other-en/2015/09/08/2172/">Prof. Fujimura</a>. My research interests include human-computer interaction, Augmented Reality and Virtual Reality, and CSCW.
                    </p>
                    <div class="contact-links contact-icons">
                        <a href="mailto:shxu@toki.waseda.jp" class="icon-btn" title="Email">
                            <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="#4a5568" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="4" width="20" height="16" rx="4"/><polyline points="22,6 12,13 2,6"/></svg>
                        </a>
                        <a href="https://scholar.google.com/citations?user=T1b3u8EAAAAJ" class="icon-btn" target="_blank" rel="noopener noreferrer" title="Google Scholar">
                            <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="#4a5568" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M12 2L2 7l10 5 10-5-10-5z"/>
                                <path d="M2 17l10 5 10-5"/>
                                <path d="M2 12l10 5 10-5"/>
                            </svg>
                        </a>
                        <a href="https://instagram.com/shxutoki" class="icon-btn" target="_blank" rel="noopener noreferrer" title="Instagram">
                            <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="#4a5568" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <rect x="2" y="2" width="20" height="20" rx="5"/>
                                <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/>
                                <line x1="17.5" y1="6.5" x2="17.5" y2="6.5"/>
                            </svg>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    
    <section class="featured-research">
        <div class="container">
            <h2 class="section-title">Featured Research</h2>
            <div class="research-grid">
                {featuredProjects.map(project => (
                    <div class="research-card">
                        <div style="overflow: hidden;">
                            <img src={project.image} alt={project.title} class="card-img">
                        </div>
                        <div class="card-content">
                            <h3>{project.title}</h3>
                            <p>{project.description}</p>
                            <div class="tags">
                                {project.tags.map(tag => (
                                    <span class="tag">{tag}</span>
                                ))}
                            </div>
                            <a href={`/MyPage/research/${project.slug}`} class="preview-link">Learn more ‚Üí</a>
                        </div>
                    </div>
                ))}
            </div>
            <div class="section-cta">
                <a href="/MyPage/research" class="text-link">View all research projects ‚Üí</a>
            </div>
        </div>
    </section>
    
    <section class="news-section">
        <div class="container">
            <h2 class="section-title">Latest News</h2>
            <div class="news-list">
                <div class="news-item">
                    <div class="news-date">Mar 2025</div>
                    <div class="news-content">
                        <p>
                            <span class="emoji">‚úàÔ∏è</span> Attending IEEE VR 2025 in Paris, France
                        </p>
                    </div>
                </div>
                <div class="news-item">
                    <div class="news-date">Jan 2025</div>
                    <div class="news-content">
                        <p>
                            <span class="emoji">üìù</span> Poster paper "Exploring Human Reactions to Telepresence Drones: A User Study on Safety and Trust Using A Simulated Drone in a VR Environment" accepted at IEEE VR 2025
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>
</MainLayout>

<style>
    /* ‰∏ªÈ°µÁâπÂÆöÊ†∑Âºè */
    .hero {
        padding: 4rem 0;
        background-color: var(--color-background);
    }
    
    .hero-content {
        display: grid;
        grid-template-columns: 1fr 1.5fr;
        align-items: center;
        gap: 3rem;
    }
    
    .hero-title {
        font-size: 3.5rem;
        font-weight: 500;
        margin-bottom: 0.5rem;
        color: var(--color-text);
        font-family: var(--font-serif);
    }
    
    .hero-subtitle {
        font-size: 1.5rem;
        font-weight: 400;
        margin-bottom: 1.5rem;
        color: var(--color-text-light);
        font-family: var(--font-serif);
        line-height: 1.3;
    }
    
    .highlight {
        color: var(--color-primary);
        display: inline-block;
    }
    
    .highlight-text {
        color: var(--color-primary);
    }
    
    .hero-description {
        font-size: 1.1rem;
        margin-bottom: 2rem;
        color: var(--color-text-light);
        max-width: 90%;
    }
    
    .university-link {
        color: var(--color-text);
        border-bottom: 1px solid var(--color-primary);
        transition: color 0.2s ease, border-color 0.2s ease;
    }
    
    .university-link:hover {
        color: var(--color-primary);
    }
    
    .hero-image {
        text-align: center;
    }
    
    .hero-image img {
        width: 100%;
        max-width: 500px;
        border-radius: 0;
        box-shadow: var(--shadow);
    }
    
    .btn {
        display: inline-block;
        padding: 0.75rem 1.5rem;
        border-radius: 2px;
        font-weight: 400;
        transition: all 0.2s;
        letter-spacing: 0.5px;
        font-size: 0.9rem;
    }
    
    .btn-primary {
        background-color: var(--color-primary);
        color: white;
    }
    
    .btn-primary:hover {
        background-color: var(--color-accent);
        color: white;
    }
    
    .btn-secondary {
        background-color: var(--color-background);
        color: var(--color-text);
        border: 1px solid var(--color-border);
    }
    
    .btn-secondary:hover {
        background-color: var(--color-background-alt);
        border-color: var(--color-text-light);
    }
    
    section {
        padding: 4rem 0;
    }
    
    .featured-research {
        background-color: var(--color-background) !important; /* Á±≥Ëâ≤Á∫∏Âº†ËÉåÊôØÔºå‰∏éÈ°µÈù¢‰∏ªËÉåÊôØÁõ∏Âêå */
        padding: 4rem 0;
    }
    
    .section-title {
        font-size: 2rem;
        font-weight: 400;
        margin-bottom: 2rem;
        font-family: var(--font-serif);
        color: var(--color-text);
        text-align: center;
        position: relative;
        padding-bottom: 1rem;
    }
    
    .section-title:after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 50%;
        width: 60px;
        height: 2px;
        background-color: var(--color-primary);
        transform: translateX(-50%);
    }
    
    /* ‰∏∫Êñ∞ÈóªÈÉ®ÂàÜÂàõÂª∫ÁâπÊÆäÁöÑÂ∑¶ÂØπÈΩêÊ†áÈ¢òÊ†∑Âºè */
    .news-section .section-title {
        text-align: left;
    }
    
    .news-section .section-title:after {
        left: 0;
        transform: none;
    }
    
    .research-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(450px, 1fr));
        gap: 2.5rem;
    }
    
    .research-card {
        display: block;
        background-color: white;
        border-radius: 5px;
        overflow: hidden;
        box-shadow: var(--shadow-sm);
        transition: transform 0.3s ease, box-shadow 0.3s ease, border-color 0.3s ease;
        border: 1px solid var(--color-border);
    }
    
    .research-card:hover {
        transform: translateY(-5px);
        box-shadow: var(--shadow);
    }
    
    .card-img {
        width: 100%;
        aspect-ratio: 16/9;
        object-fit: cover;
        transition: transform 0.5s ease;
    }
    
    .research-card:hover .card-img {
        transform: scale(1.03);
    }
    
    .card-content {
        padding: 1.5rem;
    }
    
    .card-content h3 {
        font-size: 1.15rem;
        margin-bottom: 0.75rem;
        font-weight: 500;
        color: var(--color-text);
    }
    
    .card-content p {
        margin-bottom: 1rem;
        color: var(--color-text-light);
    }
    
    .tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin: 1rem 0;
    }
    
    .tag {
        background-color: var(--color-primary-light);
        color: var(--color-primary);
        padding: 0.2rem 0.65rem;
        border-radius: 2px;
        font-size: 0.8rem;
        letter-spacing: 0.5px;
        transition: background-color 0.3s ease, color 0.3s ease;
    }
    
    .preview-link {
        font-weight: 500;
        color: var(--color-primary);
    }
    
    .preview-link:hover {
        color: var(--color-accent);
    }
    
    .section-cta {
        margin-top: 2rem;
        text-align: center;
    }
    
    .text-link {
        color: var(--color-primary);
        font-weight: 500;
        transition: color 0.2s ease;
    }
    
    .text-link:hover {
        color: var(--color-accent);
    }
    
    .news-section {
        background-color: var(--color-background);
    }
    
    .news-list {
        max-width: 800px;
        margin: 0;
    }
    
    .news-item {
        display: flex;
        gap: 1.5rem;
        margin-bottom: 1.5rem;
        padding-bottom: 1.5rem;
        border-bottom: 1px solid var(--color-border);
        transition: border-color 0.3s ease;
    }
    
    .news-item:last-child {
        border-bottom: none;
    }
    
    .news-date {
        width: 6rem;
        flex-shrink: 0;
        color: var(--color-text-light);
        font-weight: 400;
        opacity: 0.8;
        transition: color 0.3s ease;
    }
    
    .news-content {
        flex-grow: 1;
        background-color: transparent;
        padding: 0;
        border-radius: 0;
    }
    
    .emoji {
        margin-right: 0.5rem;
    }
    
    .news-content p {
        margin: 0;
        color: var(--color-text);
    }
    
    @media (max-width: 768px) {
        .hero-content {
            grid-template-columns: 1fr;
            text-align: center;
        }
        
        .hero-description {
            max-width: 100%;
        }
        
        .hero-image img {
            max-width: 400px;
        }
        
        .research-grid {
            grid-template-columns: 1fr;
        }
        
        .news-item {
            flex-direction: column;
        }
        
        .news-date {
            margin-bottom: 0.5rem;
        }
    }
    
    @media (max-width: 520px) {
        .research-card {
            flex-direction: column;
        }
        
        .card-img {
            width: 100%;
            height: 200px;
        }
    }
    
    .contact-icons {
        display: flex;
        gap: 2rem;
        margin-bottom: 2rem;
        justify-content: flex-start;
    }
    .icon-btn {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 54px;
        height: 54px;
        border: 2px solid #7c9c8e;
        border-radius: 50%;
        background: transparent;
        transition: border-color 0.2s, background 0.2s;
        text-decoration: none;
    }
    .icon-btn:hover {
        border-color: #6b46c1;
        background: #f3e8ff;
    }
    .icon-btn svg {
        display: block;
        stroke: #4a5568;
        transition: stroke 0.2s;
    }
    .icon-btn:hover svg {
        stroke: #6b46c1;
    }
</style>
